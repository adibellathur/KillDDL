<resources>

    <!-- Base application theme. -->
    <style name="KillDDL" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultColorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/defaultColorPrimaryDark</item>
        <item name="colorAccent">@color/defaultColorAccent</item>
        <item name="android:actionBarTheme">@style/KillDDL.AppBarOverlay</item>
        <item name="android:navigationBarColor">@color/defaultColorAccentLight</item>
        <item name="android:statusBarColor">@color/defaultColorAccentLight</item>
        <item name="android:colorForeground">@color/defaultColorPrimaryLight</item>
        <item name="android:textColorPrimaryInverse">@color/defaultColorPrimaryDark</item>
        <item name="android:windowBackground">@color/defaultColorPrimary</item>
        <item name="android:textColorPrimary">@color/default_text_color_primary</item>
    </style>

    <style name="KillDDL.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarSize">80dp</item>
        <item name="titleTextStyle">@style/KillDDL.ActionBar.TitleText</item>
    </style>

    <style name="KillDDL.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="KillDDL.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KillDDL.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dark" parent="KillDDL" >
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/darkColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="android:colorForeground">@color/darkColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/darkColorPrimaryDark</item>
        <item name="android:windowBackground">@color/darkColorPrimary</item>
        <item name="android:navigationBarColor">@color/darkColorAccentLight</item>
    </style>

</resources>
